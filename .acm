# ACM bash helpers

# Create $1.cc (if not exists) from template and Open file.
function t {
  if [ -z $1 ]; then
    echo "No input!"
    return
  fi
  if [ ! -f $1.cc ]; then
    echo "Creating: $1.cc"
    cp ~/acm/template.cc $1.cc
  fi
  gvim $1.cc
}
alias ta="t a"
alias tb="t b"
alias tc="t c"
alias td="t d"
alias te="t e"
alias tf="t f"
alias tg="t g"
alias th="t h"
alias ti="t i"
alias tj="t j"

# Compile and Run $1.cc
function r {
  g++ -D LOCAL_DEBUG $1.cc -o $1.out && ./$1.out
}
alias ra="r a"
alias rb="r b"
alias rc="r c"
alias rd="r d"
alias re="r e"
alias rf="r f"
alias rg="r g"
alias rh="r h"
alias ri="r i"
alias rj="r j"

